{
  "name": "dctl",
  "version": "4.0.0",
  "description": "Get your Dragonchain out of it's shell.",
  "author": "Dragonchain, Inc. <support@dragonchain.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dragonchain-inc/dctl.git"
  },
  "bugs": {
    "url": "https://github.com/dragonchain-inc/dctl/issues"
  },
  "engines": {
    "node": ">=10"
  },
  "preferGlobal": true,
  "bin": {
    "dctl": "./src/dctl.js"
  },
  "dependencies": {
    "commander": "^3.0.1",
    "dragonchain-sdk": "^4.0.0",
    "get-stdin": "^7.0.0",
    "ini": "^1.3.5",
    "readline-sync": "^1.4.10"
  },
  "devDependencies": {
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "prettier": "^1.18.2"
  },
  "scripts": {
    "format": "prettier --write src/**/* src/*",
    "lint": "eslint --ext .js --format unix src/ && prettier --check src/**/* src/*"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 180
  },
  "eslintConfig": {
    "parser": "espree",
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "browser": false,
      "node": true,
      "es6": true
    },
    "rules": {
      "no-console": "off",
      "max-len": [
        "error",
        {
          "code": 200
        }
      ]
    }
  }
}
